<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %logger{0} %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
         <Logger name="mazeRunnerLogger" level="OFF" additivity="false">
            <AppenderRef ref="console" />
        </Logger>

        <Logger name="runnerLogger" level="OFF" additivity="false">
            <AppenderRef ref="console" />
        </Logger>

        <Root level="info">
            <AppenderRef ref="console" />
        </Root>        
    </Loggers>
</Configuration>